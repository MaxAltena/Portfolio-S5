{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2020
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:lit/recommended"],
	"plugins": ["prettier", "lit"],
	"rules": {
		"linebreak-style": ["warn", "unix"],
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "avoid",
				"bracketSpacing": true,
				"printWidth": 120,
				"semi": true,
				"singleQuote": false,
				"tabWidth": 4,
				"useTabs": true
			}
		]
	}
}
