{
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018
	},
	"env": {
		"browser": true,
		"commonjs": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:recommended", "plugin:prettier/recommended", "plugin:lit/recommended"],
	"plugins": ["prettier", "lit"],
	"rules": {
		"linebreak-style": ["warn", "unix"],
		"no-console": "warn",
		"camelcase": "warn",
		"no-unused-vars": "warn",
		"no-case-declarations": "warn",
		"no-undef": "warn",
		"no-useless-escape": "warn",
		"no-redeclare": "warn",
		"no-prototype-builtins": "warn",
		"no-empty": "warn",
		"no-constant-condition": "warn",
		"no-func-assign": "warn",
		"prettier/prettier": [
			"error",
			{
				"arrowParens": "avoid",
				"bracketSpacing": true,
				"printWidth": 120,
				"semi": true,
				"singleQuote": false,
				"tabWidth": 4,
				"useTabs": true
			}
		]
	}
}
